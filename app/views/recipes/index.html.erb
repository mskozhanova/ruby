

<h1>Searching for Recipes - <%= @search_term%></h1>
<table border="1">
	<tr><th>image</th><th>Title</th>	<th>Link</th></tr>
	<% @recipes.each do |recipe| %>
		<tr class="<%= cycle('even', 'odd')%>">
		<th><%= link_to(image_tag(recipe["image_url"], width: 100, height: 100), recipe["source_url"])%></th>
		<th><%= link_to(sanitize(recipe["title"]), recipe["source_url"])%></th>
		<th><%= recipe["social_rank"]%></th></tr>
	<%end%>
</table>